<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
	xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="Songbook\Entity\Song" table="song" repository-class="Songbook\Entity\SongRepository">
		<id name="id" type="integer">
			<generator strategy="AUTO" />
		</id>
		<field name="title" type="string" />
		<field name="author" type="string" />
		<field name="copyright" type="string" />
		<field name="create_time" type="timestamp" />
		<one-to-one field="favoriteHeader" target-entity="Content" mapped-by="song" cascade="ALL" />
		<one-to-one field="defaultHeader" target-entity="Content" mapped-by="song" cascade="ALL" />
		<one-to-many field="content" target-entity="Content" mapped-by="song" cascade="ALL" />
		<one-to-many field="concertItem" target-entity="ConcertItem" mapped-by="song" cascade="ALL" />
		<one-to-one field="currentConcertItem" target-entity="ConcertItem" mapped-by="song" cascade="ALL"/>
	</entity>
</doctrine-mapping>
